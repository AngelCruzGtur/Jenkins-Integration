pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'echo Building project...'
                sh 'mkdir -p build'
                sh 'javac -d build src/HelloWorld.java'
            }
        }

        stage('Test') {
            steps {
                sh 'echo No tests yet'
            }
        }

        stage('Done') {
            steps {
                echo 'Build completed!'
            }
        }
    }
}
